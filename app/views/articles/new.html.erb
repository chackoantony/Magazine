<h1>New Article</h1>

<% if @article.errors.present? %>
  Following errors occoured
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>  
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 5,  class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= select_tag 'article[tag_ids][]', options_from_collection_for_select(@tags.parent_tags, :id, :name), 
      multiple: true,  id: 'tag_select', class: 'form-control' %>
  </div>  
  
  <div class="form-group">
    <%= f.label :sub_tags %>
    <%= select_tag 'article[tag_ids][]', [],  multiple: true,  id: 'sub_tag_select', class: 'form-control' %>
  </div> 
  
  <%= f.submit 'Create', class: 'btn btn-primary'  %>
  <%= link_to 'Cancel', articles_path, class: 'btn btn-default' %>
<% end %>  

