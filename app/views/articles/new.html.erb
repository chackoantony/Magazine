<h1>New Article</h1>

<% if @article.errors.present? %>
  Following errors occoured
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>  
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <br />
  <%= f.label :content %>
  <%= f.text_area :content, cols: 20, rows: 5 %>
  <br /><br />
  <%= f.submit 'Create'  %>
<% end %>  

<%= link_to 'Cancel', articles_path %>
